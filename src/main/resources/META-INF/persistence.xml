<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
	<persistence-unit name="MY_JPA_HR" transaction-type="RESOURCE_LOCAL">
		<class>modelo.entities.Region</class>
		<class>modelo.entities.Country</class>
		<properties>
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mysql_hr?serverTimezone=UTC"/>
			<property name="jakarta.persistence.jdbc.user" value="root"/>
			<property name="jakarta.persistence.jdbc.password" value=""/>
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
